<div class="container">
  <div class="row">
    <div class="col">
      <h4>全ユーザー一覧</h4>
        <table class="table">
          <thead>
            <tr>
              <th>ユーザーID</th>
              <th>ユーザー名</th>
              <th>メールアドレス</th>
            </tr>
          </thead>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= link_to user.name, admin_user_path(user) %></td>
              <td><%= user.email %></td>
            </tr>
          <% end %>
        </table>
    </div>
  </div>
</div>