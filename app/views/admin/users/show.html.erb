<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5"><%= @user.name %>さんの会員詳細</h4>
      <div class="d-flex align-items-center">
        <table class="table table-borderless">
          <tr>
            <th>会員ID</th>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <th>ユーザー名</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= @user.postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= @user.address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= @user.phone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>

          <tr>
            <td><%= link_to "編集", edit_admin_user_path(@user), class: "btn btn-success" %></td>
            <td><%= link_to "削除", admin_user_path(@user), class: "btn btn-primary", method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
