<div>
  <p>タイトル:<%= @post.title %></p>
  <%= image_tag @post.get_image(200, 200) %>
  <p>商品名:<%= @post.item %>
  <p>商品紹介:<%= @post.introduction %></p>
  <p>住所:<%= @post.address %></p>
  <p>数量:<%= @post.amount %></p>
  <p>ユーザーネーム：<%= @post.user.name %></p>
  <p>投稿日：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
</div>