<h1>編集画面</h1>

<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @post, url: update_post_path(@post.id), method: :patch do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h5>商品名</h5>
  <%= f.text_field :item %>
  <h5>数量</h5>
  <%= f.text_field :amount %>
  <h5>画像</h5>
  <%= f.file_field :image, accept: "image/*" %>
  <h5>住所</h5>
  <%= f.text_area :address %></br>
  <h5>商品紹介</h5>
  <%= f.text_area :introduction %></br>
  <%= f.submit '保存' %>
<% end %>