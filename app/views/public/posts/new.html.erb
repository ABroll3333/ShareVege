
<h1>新規投稿</h1>
<%= form_with model: @post do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h5>商品名</h5>
  <%= f.text_field :item %>
  <h5>数量</h5>
  <%= f.text_field :amount %>
  <h5>画像</h5>
  <%= f.file_field :image, accept: "image/*" %>
  <h5>住所</h5>
  <%= f.text_area :address %></br>
  <h5>商品紹介</h5>
  <%= f.text_area :introduction %></br>
  <%= f.submit '投稿' %>
<% end %>
